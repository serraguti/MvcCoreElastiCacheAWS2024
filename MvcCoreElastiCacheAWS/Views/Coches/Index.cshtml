@model IEnumerable<MvcCoreElastiCacheAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Coches XML AWS</h1>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <td></td>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                <img src="@item.Imagen"
                style="width: 80px; height: 80px"/>
            </td>
            <td>
                <a asp-controller="Coches" asp-action="Details"
                asp-route-id="@item.IdCoche" class="btn btn-outline-info">
                    Details
                </a>
                <a asp-controller="Coches"
                    asp-action="SeleccionarFavorito"
                    asp-route-idcoche="@item.IdCoche"
                    class="btn btn-primary">
                    Seleccionar favorito
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
